<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="108dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
android:layout_marginHorizontal="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/round_egg_list"
        android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/tv_food_name"
            android:fontFamily="@font/segoe_ui"
            android:textColor="#1D1D1B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@id/img_food1"
            android:textSize="16sp"
            tools:text="@string/titleMovie" />
    <TextView
        android:id="@+id/tv_calorie_info"
        android:fontFamily="@font/segoe_ui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/tv_food_name"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@id/img_food1"
        android:textSize="14sp"
        android:textColor="#5F5F5F"
        tools:text="@string/_250_cal" />


    <TextView
        android:id="@+id/tv_restaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/segoe_ui_bold"
        android:layout_below="@+id/tv_calorie_info"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@id/img_food1"
        android:textSize="14sp"
        android:textColor="#1D1D1B"
        android:text="@string/Restaurant_HamishDaud" />

    <androidx.cardview.widget.CardView
        android:id="@+id/img_food1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp">

        <ImageView
            android:id="@+id/img_food"
            android:layout_width="83dp"
            android:layout_height="97dp"
            android:scaleType="fitXY"
            android:src="@drawable/food_history"
            />


    </androidx.cardview.widget.CardView>


    <View
        android:layout_marginTop="10dp"
        android:layout_below="@id/img_food1"
        android:layout_marginHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BFBFBF" />



    </RelativeLayout>
