<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sportActivity.SportActivity"
    android:layout_margin="30dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/enter_data">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_data"
            android:textSize="19sp"
            android:fontFamily="@font/segoe_ui_bold"
            android:textColor="#373737"
            tools:ignore="NestedWeights" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/calorie_olahraga"
                android:layout_height="wrap_content"
                android:text="@string/_255_cal"
                android:textSize="15sp"
                android:textColor="#373737"
                tools:ignore="NestedWeights" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/slice"
                android:textSize="15sp"
                android:textColor="#373737"
                tools:ignore="NestedWeights" />
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/menit_olahraga"
                android:layout_height="wrap_content"
                android:text="@string/_30_minute"
                android:textSize="15sp"
                android:textColor="#373737"
                tools:ignore="NestedWeights" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/enter_data"
        android:id="@+id/duration"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/duration"
            android:textColor="#373737"
            android:textSize="15sp"
            android:fontFamily="@font/segoe_ui_bold"
            android:layout_gravity="center"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnOpenDialog"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/radius_time"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingEnd="42dp"
            android:paddingStart="42dp"
            tools:ignore="RtlSymmetry">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="00"
                android:id="@+id/duration1"
                android:gravity="center"
                android:textColor="#373737" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="#373737"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30"
                android:id="@+id/duration2"
                android:gravity="center"
                android:textColor="#373737"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="#373737"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:id="@+id/duration3"
                android:gravity="center"
                android:textColor="#373737"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/duration"
        android:id="@+id/distance"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/distance"
            android:textColor="#373737"
            android:fontFamily="@font/segoe_ui_bold"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_weight="1"/>
        <LinearLayout
            android:id="@+id/btn_linear_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/radius_time"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            tools:ignore="RtlSymmetry">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_distance"
                android:text="@string/_4_0_km"
                android:gravity="center"
                android:textColor="#373737" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/distance"
        android:layout_marginTop="335dp">
        <Button
            android:layout_width="match_parent"
            android:id="@+id/btn_cancel_sport"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:background="@drawable/radius_ooo"
            android:text="@string/cancel"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:textAllCaps="false"
            android:textColor="#76C33A"
            android:textSize="18sp" />
        <Button
            android:id="@+id/btn_save_sport"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:background="@drawable/radius_burned_button"
            android:text="@string/save"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="18sp" />
    </LinearLayout>


</RelativeLayout>